
    <div class="edit-tools">
        <div class="edit-box">
            <div class="btn-con">
                <a href="/blog" class="btn-round"><div class="btn-button-r"><i class="fas fa-arrow-left"></i></div></a>
                <h1 class="tools-heading">Compose Article</h1>
            </div>
        </div>
        <div class="edit-box">
            <div class="btn-con">
                <span id="nameholder">Add image</span>
                <input type="file" name="background" accept="image/*" class="btn-upload"  hidden="hidden" id="realfile" required>
                <input type="text" id="imageString" name="imageString" hidden="hidden">
                <label for="file" id="newButton"><i class="fas fa-file-image"></i></label>
                <button type="submit" class="btn-round" style="margin-left: 20px;"><div class="btn-button-r"><i class="fas fa-paper-plane"></i></div></button>
            </div>
        </div>
    </div>
    <div class="blog-editor">
        
            <div class="blog-title">
                <h1 for="title">Title</h1>
                <input type="text" name="title" id="title" required  value="<%= article.title %> ">
            </div>
            <div class="blog-description">
                <h1 for="description">Description</h1>
                <input type="text" name="description" zid="description" required value="<%= article.description %>">
            </div>
            <div class="blog-tags">
            </div>
            <div class="blog-markdown">
                <h1 for="markdown">Markdown</h1>
                <textarea name="markdown" id="markdown" required>
                    <%= article.markdown %> 
                </textarea>
            </div>
       
    </div> 
